<UserControl x:Class="QNAGen.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QNAGen.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Style="{StaticResource StandardGridStyle}">
        <StackPanel>
            <TextBlock Text="Settings" 
                       Style="{StaticResource HeaderTextStyle}"
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>
            
            <!-- Placeholder for future settings -->
            <Border Style="{StaticResource ContentBorderStyle}">
                <StackPanel>
                    <TextBlock Text="Theme" Style="{StaticResource LargeTextStyle}" Margin="0,0,0,10"/>
                    <ComboBox Width="200" HorizontalAlignment="Left">
                        <ComboBoxItem Content="Dark" IsSelected="True"/>
                        <ComboBoxItem Content="Light"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Add more setting sections as needed -->

        </StackPanel>
    </Grid>
</UserControl>