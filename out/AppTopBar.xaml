<UserControl x:Class="QNAGen.Controls.AppTopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QNAGen.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">

    <Border Background="{StaticResource SecondaryBackgroundBrush}" 
            Padding="10,5">
        <StackPanel Orientation="Horizontal" 
                    Style="{StaticResource StandardStackPanelStyle}">
            <Button Content="QNA" Click="QNA_Click" 
                    Style="{StaticResource SecondaryButtonStyle}"/>
            <Button Content="Chat" Click="Chat_Click" 
                    Style="{StaticResource SecondaryButtonStyle}"/>
            <Button Content="Settings" Click="Settings_Click" 
                    Style="{StaticResource SecondaryButtonStyle}"/>
        </StackPanel>
    </Border>
</UserControl>